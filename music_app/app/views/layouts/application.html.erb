<!DOCTYPE html>
<html>
  <head>
    <title>MusicApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class='main-content'>
      <h1 class='main-logo'>Music App</h1>

      <% if logged_in? %>
        <nav>
          <a class='button' href="<%= user_url(current_user) %>">Take me Home</a>

          <div class="user_detail">
            <p>Logged in as: <%= current_user.email %></p>
          <form class="" action="<%= session_url %>" method="post">
            <input type="hidden" name="_method" value="delete">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
            <input type="submit" value="Sign Out">

            <!-- <input type="text" name="user[username]" value="Caida">
            <input type="text" name="bananas" value="caioda@gmail"> -->
            <!-- params - user: { username: 'Caida' }, bananas: 'caida@gmail.com' -->
            <!-- params[:user] => { username: 'Caida' }
            params[:bannas] => 'caida@gmail.com'
            params[:user][:username] -->
          </form>
          </div>
        </nav>
        <% end %>

        <% if flash[:errors] %>
          <p><%= flash[:errors].join(", ") %></p>
        <% end %>
    <%= yield %>
  </div>
  </body>
</html>
